{
    "name": "agungsugiarto/codeigniter4-hashing",
    "description": "The Illuminate Hashing package.",
    "license": "MIT",
    "authors": [
        {
            "name": "Taylor Otwell",
            "email": "taylor@laravel.com"
        },
        {
            "name": "Agung Sugiarto",
            "email": "me.agungsugiarto@gmail.com"
        }
    ],
    "require": {
        "php": "^7.2"
    },
    "require-dev": {
        "codeigniter4/framework": "^4.0",
        "laminas/laminas-coding-standard": "^2.1",
        "phpunit/phpunit": "^8.5"
    },
    "autoload": {
        "psr-4": {
            "Illuminate\\Hashing\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Illuminate\\Hashing\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "9.x-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --testdox --colors=always"
    }
}
